# WSGI handler
WSGISocketPrefix /var/spool/faf/wsgi2
WSGIDaemonProcess faf2 user=faf group=faf processes=3 threads=5
WSGIProcessGroup faf2
WSGIScriptAlias /faf2 @PYTHONDIR@/webfaf2/hub.wsgi

<Location /faf2>
    <IfModule mod_authz_core.c>
        # Apache 2.4
       Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order allow,deny
        Allow from all
    </IfModule>
</Location>

# project main
<Directory "@PYTHONDIR@/webfaf2/">
    Options Indexes
    IndexOptions FancyIndexing
    <IfModule mod_authz_core.c>
        # Apache 2.4
       Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order allow,deny
        Allow from all
    </IfModule>
</Directory>

# static
Alias /faf2/static "/usr/share/faf/web2/static"
<Directory "/usr/share/faf/web2/static">
    Options Indexes
    IndexOptions FancyIndexing
    <IfModule mod_authz_core.c>
        # Apache 2.4
       Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order allow,deny
        Allow from all
    </IfModule>
</Directory>
