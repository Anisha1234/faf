# WSGI handler
WSGISocketPrefix /var/spool/faf/wsgi
WSGIDaemonProcess faf user=faf group=faf processes=3 threads=5
WSGIProcessGroup faf
WSGIScriptAlias /faf @PYTHONDIR@/webfaf/hub.wsgi

<Location /faf>
    <IfModule mod_authz_core.c>
        # Apache 2.4
       Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order allow,deny
        Allow from all
    </IfModule>
</Location>

# kobo media
